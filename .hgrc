[ui]
merge = vimdiff

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[extensions]
extdiff =
color =

[extdiff]
cmd.vdiff = vimdiff
opts.dirdiff = -f '+next' '+execute "DirDiff" fnameescape(argv(0)) fnameescape(argv(1))' '+wincmd l' '+q' '+let g:ycm_show_diagnostics_ui=0' '+SyntasticToggleMode'

[templatealias]
google_compact_desc_text = '{GOOG_prefix(GOOG_trim_desc(desc), termwidth-graphwidth)}'
